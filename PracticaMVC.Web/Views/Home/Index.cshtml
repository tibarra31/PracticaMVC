                </div>
            </div>

            <div id="js-grid-juicy-projects" class="cbp">
                <div class="cbp-item admin">
                    <div class="cbp-caption">
                        <div class="cbp-caption-defaultWrap">
                            <div class="panelapp gradiente2">
                                <div class="panelappic">
                                    <center>
                                        <img src="~/Content/images/usuarios.png" style="height:55px;width:55px;">
                                    </center>
                                </div>
                                <div class="panelapptitulo">
                                    USUARIOS
                                </div>
                            </div>
                        </div>
                        <div class="cbp-caption-activeWrap" style="width: 80%; border-radius: 0px 0px 15px 15px;">
                            <div class="cbp-l-caption-alignCenter" style="width: 100%;">
                                <div class="cbp-l-caption-body" style="width: 100%;">
                                    <a href="@Url.Action("Index", "Usuarios")"
                                       class="cbp-l-caption-buttonLeft btn gray uppercase btn gray uppercase" rel="nofollow">Entrar</a>
