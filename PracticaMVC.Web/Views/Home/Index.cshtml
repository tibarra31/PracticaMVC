@{
    ViewBag.Title = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/Content/css/cubeportfolio.min.css" />
<link rel="stylesheet" type="text/css" href="~/Content/css/portfolio.min.css" />
<link rel="stylesheet" type="text/css" href="~/Content/css/custom.css" />

<div class="page-content-wrapper">
    <div class="page-content">
        <h1 class="page-title">
            Pantalla de Inicio
            <small>Módulo de Contenido</small>
        </h1>

        <div class="portfolio-content portfolio-1" style="margin-bottom: 60px;">
            <div id="js-filters-juicy-projects" class="cbp-l-filters-button">
                <div data-filter="*" class="cbp-filter-item-active cbp-filter-item btn dark btn-outline uppercase">
                    Todos
                    <div class="cbp-filter-counter"></div>
                </div>
                <div data-filter=".admin" class="cbp-filter-item btn dark btn-outline uppercase">
                    Administración
                    <div class="cbp-filter-counter"></div>
                </div>
